<Window x:Class="Assignment4.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="Selection" Height="260" Width="430" VerticalContentAlignment="Center">
    <Grid>
        <RadioButton x:Name="AESButton" Content="AES" HorizontalAlignment="Left" Margin="20,90,0,0" VerticalAlignment="Top" GroupName="CryptoMode" FontSize="24" Width="60" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <RadioButton x:Name="RSAButton" Content="RSA" HorizontalAlignment="Left" Margin="139,90,0,0" VerticalAlignment="Top" GroupName="CryptoMode" FontSize="24" VerticalContentAlignment="Center" Height="30" Width="60"/>
        <Label x:Name="SelectionLabel" Content="Select a Cryptographic algorithm" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="NextButton" Content="Next" HorizontalAlignment="Left" Margin="300,180,0,0" VerticalAlignment="Top" FontSize="24" Width="110" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="NextButton_Click"/>
    </Grid>
</Window>
